{
  "name": "sisu-agent-mw-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/*/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  },
  "scripts": {
    "build": "npm run -ws build",
    "merge:md": "node ./tools/merge-md.cjs --root ./ ./.doc-bundles/",
    "docs:update": "node ./tools/update-readme.cjs",
    "lint": "eslint --ext .ts,.js packages examples",
    "lint:fix": "eslint --ext .ts,.js packages examples --fix",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "release:publish": "npm run version-packages && npm run release",
    "release:full": "npm run changeset && npm run version-packages && npm run release",
    "release:report": "node ./tools/release-report.cjs",
    "release:report:since": "node ./tools/release-report.cjs --since=origin/main",
    "release:plan": "changeset status --output=markdown",
    "release:plan:since": "changeset status --since=origin/main --output=markdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "rebuild:test": "rm -f package-lock.json && npm install && npm run build -ws && npm run test:coverage",
    "ex:anthropic:hello": "TRACE_HTML=1 npm run dev -w examples/anthropic-hello -- --trace",
    "ex:anthropic:control": "TRACE_HTML=1 npm run dev -w examples/anthropic-control-flow -- --trace",
    "ex:anthropic:weather": "TRACE_HTML=1 npm run dev -w examples/anthropic-weather -- --trace",
    "ex:openai:hello": "TRACE_HTML=1 npm run dev -w examples/openai-hello -- --trace",
