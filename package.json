{
  "name": "@finger-gun/sisu",
  "version": "0.0.0",
  "description": "Grit-powered agent framework core",
  "license": "MIT",
  "author": "",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "sisu",
    "agents",
    "typescript",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/finger-gun/sisu.git"
  },
  "bugs": {
    "url": "https://github.com/finger-gun/sisu/issues"
  },
  "homepage": "https://github.com/finger-gun/sisu#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "cli": "src/cli.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "target": "node18"
  },
  "bin": {
    "sisu": "./dist/cli.cjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
